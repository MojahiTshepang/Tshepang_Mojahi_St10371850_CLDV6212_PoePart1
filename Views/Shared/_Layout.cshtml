<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background: #f8f9fa;
        }

        /* Navbar gradient */
        .navbar-custom {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
        }

            .navbar-custom .nav-link {
                color: #fff !important;
                font-weight: 500;
                transition: color 0.3s;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffd700 !important;
                }

        .navbar-brand {
            font-weight: bold;
            color: #fff;
        }

            .navbar-brand i {
                margin-right: 5px;
            }

        /* Footer gradient */
        footer {
            background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
            color: #fff;
        }

            footer a {
                color: #ffd700;
                text-decoration: underline;
            }

        /* Alert icons and padding */
        .alert i {
            margin-right: 8px;
        }

        /* Buttons rounded & shadow */
        .btn-custom {
            border-radius: 50px;
            transition: all 0.3s;
        }

            .btn-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            }

        /* Table styling */
        table.table-striped tbody tr:nth-of-type(odd) {
            background-color: #e3f2fd;
        }

        table.table-hover tbody tr:hover {
            background-color: #bbdefb;
        }

        .badge-custom {
            border-radius: 12px;
            padding: 5px 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> ABC Retailers
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index"><i class="fas fa-users"></i> Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index"><i class="fas fa-box"></i> Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index"><i class="fas fa-shopping-cart"></i> Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Upload" asp-action="Index"><i class="fas fa-upload"></i> Uploads</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt"></i> Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @* Alerts *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded shadow-sm" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top mt-4">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2025 - ABC Retailers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-end">
                    <i class="fas fa-store"></i> Your one-stop shop for the best products
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
